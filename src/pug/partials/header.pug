  button.header__btn.btn.btn--filled.hidden-mobile(data-modal="main-modal" type="button")
    span.btn__inner FREIGHT INQUIRE
  .m-button-group.hidden-desktop
    button.m-button-group__btn.btn.btn--filled(data-modal="main-modal" type="button")
      span.btn__inner
        svg(width="24" height="24")
          use(xlink:href="sprite.svg#ship_sprite") 
    button.m-button-group__btn.btn.btn--primary.open-menu-btn
      span.btn__inner
        svg(width="24" height="24")
          use(xlink:href="sprite.svg#menu_sprite") 