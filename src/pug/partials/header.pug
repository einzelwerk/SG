header.header.container
  .header__logo.logo 
    a.logo__link(href="") 
      img.logo__src(src=require('@/images/logo.svg'), alt="")
  nav.header__nav.nav.hidden-mobile
    ul.nav-list 
      each val in menu 
        li.nav__item(class=val.hasSub ? 'nav__item--has-children' : '')
          a.nav__link(href=val.link)=val.name
          if val.hasSub 
            ul.nav__sub.sub-menu
              each val2 in val.hasSub
                li.sub-menu__item 
                  a.sub-menu__link(href=val2.link)= val2.name
  nav.header__mobile-nav.mobile-nav.hidden-desktop#nav
    ul.mobile-nav__list
      each val in menu 
        li.mobile-nav__item(class=val.hasSub ? 'mobile-nav__item--has-children' : '')
          span.mobile-nav__item-wrap
            a.mobile-nav__link(href=val.link)=val.name
            if val.hasSub 
              span.mobile-nav__arrow
                svg(width="12" height="12")
                  use(xlink:href="sprite.svg#arrow_sprite") 
          if val.hasSub 
            ul.mobile-nav__sub.mobile-sub-menu
              each val2 in val.hasSub
                li.mobile-sub-menu__item 
                  a.mobile-sub-menu__link(href=val2.link)= val2.name
    a.mobile-nav__btn.btn.btn--primary(href="")
      span.btn__inner  Download Presentation
